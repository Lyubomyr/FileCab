<%= form_for(@client_session) do |f| %>
  <% if @client_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client_session.errors.count, "error") %> can't sign in:</h2>

      <ul>
      <% @client_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit 'Log in' %>
  </div>
<% end %>
