<h1>Listing documents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Year</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= link_to 'Download' ,:action => :download, :file_name => document.name_url %></td>
    <td><%= document.year %></td>
    <td><%= document.description %></td>
    <% if current_user == current_client %>
        <td><%= link_to 'Show', client_document_path(current_user, document) %></td>
    <% else %>
        <td><%= link_to 'Show', cpa_document_path(current_user, document) %></td>
    <% end %>
    <td><%= link_to 'Destroy', [current_user, document], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if current_user == current_client %>
    <%= link_to 'Back', client_path(current_user) %>
<% else %>
    <%= link_to 'Back', cpa_path(current_user) %>
<% end %>

